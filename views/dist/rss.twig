<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ configs.siteName }}</title>
        <link>{{ configs.baseURL }}{{ configs.basePath }}</link>
        <description>{{ description }}</description>
        <language>{{ language }}</language>
        <pubDate>{{ pubDate }}</pubDate>
        <lastBuildDate>{{ lastBuildDate }}</lastBuildDate>
        <docs>http://blogs.law.harvard.edu/tech/rss</docs>
        <generator>{{ generator }}</generator>
        <managingEditor>{{ managingEditor }}</managingEditor>
        <webMaster>{{ webMaster }}</webMaster>
        <atom:link href="{{ linkTo('rss', NULL, NULL, {'absolute': TRUE}) }}" rel="self" type="application/rss+xml" />
        {% for post in posts %}
            <item>
                <title>{{ post.title }}</title>
                <link>{{ linkTo('post', post.id, NULL, {'absolute': TRUE}) }}</link>
                <description>{{ post.body }}</description>
                <pubDate>{{ postRssPubDate(post.time) }}</pubDate>
                <guid>{{ linkTo('post', post.id, NULL, {'absolute': TRUE}) }}</guid>
            </item>
        {% endfor %}
    </channel>
</rss>

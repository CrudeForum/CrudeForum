{% extends 'base.twig' %}

{% block title %}{{ post.safeTitle() }}{% endblock %}

{% set pageClass = 'page-post' %}

{% block header %}
<header>
    <h1>{{ post.safeTitle() }}</h1>
    <div class=buttons>
        <a href="{{ linkTo('post', postID, 'reply') }}">回覆</a>&nbsp;
        <a href="{{ linkTo('post', postID, 'prev') }}">上一發言</a>&nbsp;
        <a href="{{ linkTo('post', postID, 'next') }}">下一發言</a>&nbsp;
        <a href="{{ linkTo('post', postID, 'back') }}">回論壇</a><br><br>
    </div>
</header>
{% endblock %}

{% block content %}
<article>
    <p class="post-header">{{ post.htmlHeader() | raw }}</p>
    {{ post.htmlBody() | raw }}
</article>
{% endblock %}

{% block footer %}
<footer>
    <div class=buttons>
        <a href="{{ linkTo('post', postID, 'reply') }}">回覆</a>&nbsp;
        <a href="{{ linkTo('post', postID, 'prev') }}">上一發言</a>&nbsp;
        <a href="{{ linkTo('post', postID, 'next') }}">下一發言</a>&nbsp;
        <a href="{{ linkTo('post', postID, 'back') }}">回論壇</a><br><br>
    </div>
</footer>
{% endblock %}

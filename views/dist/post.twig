{% extends 'base.twig' %}

{% block title %}{{ post.safeTitle() }}{% endblock %}

{% set pageClass = 'page-post' %}

{% block header %}
<header>
    <h1>{{ post.safeTitle() }}</h1>
    {% include 'links.twig' with {'links': topLinks} only %}
</header>
{% endblock %}

{% block content %}
<article>
    <p class="post-header">{{ post.htmlHeader() | raw }}</p>
    {{ post.body | bodyToHTML | raw }}
</article>
{% endblock %}

{% block footer %}
<footer>
    {% include 'links.twig' with {'links': bottomLinks} only %}
</footer>
{% endblock %}

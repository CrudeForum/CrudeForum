{% extends 'base.twig' %}

{% set pageClass = 'page-forum' %}

{% block header %}
<header>
    <div class="slogan">{{ configs.sloganTop }}</div>
    {% include 'links.twig' with {'links': topLinks} only %}
</header>
{% endblock %}

{% block content %}
    <div class="posts">
        {% for postSummary in postSummaries %}
            <div class="post level-{{ postSummary.level }}">
                <a class="title" href="{{ linkTo('post', postSummary.id) }}">{{ postSummary.title }}</a>
                <span class="authoring-info">
                    <span class="separator">--</span>
                    <span class="author"><a
                        class="author-link"
                        href="{{ postSummary.author | link('user') }}">{{ postSummary.author }}</a></span>
                    <span class="connector">at</span>
                    <span class="time">{{ postSummary.time }}</span>
                </span>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block footer %}
<footer>
    {% include 'links.twig' with {'links': bottomLinks} only %}
    <div class="slogan">{{ configs.sloganBottom }}</div>
</footer>
{% endblock %}

{% extends 'base.twig' %}

{% set pageClass = 'page-forum' %}

{% block header %}
<header>
    <div class="slogan">{{ configs.sloganTop }}</div>
    <div class="buttons">
        <a href="{{ linkSay }}">發言</a>&nbsp;&nbsp;
        <a href="{{ linkPrev }}">上一頁</a>&nbsp;&nbsp;
        <a href="{{ linkForumHome }}">首頁</a>&nbsp;&nbsp;
        <a href="{{ linkHome }}">主頁</a>
    </div>
</header>
{% endblock %}

{% block content %}
    <div class="posts">
        {% for postSummary in postSummaries %}
            <div class="post level-{{ postSummary.level }}">
                <a class="title" href="{{ linkTo('post', postSummary.id) }}">{{ postSummary.title }}</a>
                <span class="authoring-info">
                    <span class="separator">--</span>
                    <span class="author">{{ postSummary.author }}</span>
                    <span class="connector">at</span>
                    <span class="time">{{ postSummary.time }}</span>
                </span>
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block footer %}
<footer>
    <div class="buttons">
        <a href="{{ linkSay }}">發言</a>&nbsp;&nbsp;
        <a href="{{ linkNext }}">下一頁</a>&nbsp;&nbsp;
        <a href="{{ linkForumHome }}">首頁</a>&nbsp;&nbsp;
        <a href="{{ linkHome }}">回主頁</a>
    </div>
    <div class="slogan">{{ configs.sloganBottom }}</div>
</footer>
{% endblock %}